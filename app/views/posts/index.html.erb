<div class="wrapper wrapper_padding clearfix">



<% @posts.each do |post| %>
  <div class="post_wrapper">
    <h2 class="font-color-change">
      <%= link_to post.title, post, style: "color:magenta" %>
    </h2>
    <h2 class="date">
      <%= post.created_at.strftime("%B, %d, %y") %>
    </h2>
  </div>
<% end %>

<% if admin_signed_in? %>
<div class="buttons">
  <br>
  <%= link_to '<button type="button">New Post</button>'.html_safe, new_post_path %>
</div>
<% end %>

</div>
