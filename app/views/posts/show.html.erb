<div id="post_content">

<h1 class="title">
  <%= @post.title %>
</h1>

<h1 class="date">
  Submitted <%= time_ago_in_words(@post.created_at) %> ago
  | <%= link_to 'edit', edit_post_path(@post) %>
  | <%= link_to 'delete', post_path(@post), :method => :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
</h1>

<p class="body">
  <%= @post.body %>
</p>

</div>
